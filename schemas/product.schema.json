{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FakeStore Product",
  "description": "Single product from FakeStore API",
  "type": "object",
  "required": ["id", "title", "price", "description", "category", "image"],
  "properties": {
    "id": { "type": "integer", "minimum": 1 },
    "title": { "type": "string" },
    "price": { "type": "number" },
    "description": { "type": "string" },
    "category": { "type": "string" },
    "image": { "type": "string" },
    "rating": {
      "type": "object",
      "properties": { "rate": { "type": "number" }, "count": { "type": "integer" } }
    }
  },
  "additionalProperties": true
}
